{
  "scripts": {
    "start": {
      "cmd": "deno run app.ts",
      "desc": "Run the server.",
      "allow": [
        "env",
        "net",
        "read",
        "run"
      ]
    },
    "build": {
      "cmd": "deno bundle public/ts/app.ts public/js/app.js"
    }
  },
  "watcher": {
    "interval": 350,
    "exts": ["js", "ts", "json"],
    "match": ["*.*"],
    "legacy": false
  },
  "logger": {
    "fullscreen": false,
    "quiet": false,
    "debug": true
  }
}