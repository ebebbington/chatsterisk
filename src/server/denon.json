{
  "scripts": {
    "start": {
      "cmd": "deno run --config tsconfig.json app.ts",
      "desc": "Run the server.",
      "allow": [
        "env",
        "net",
        "read"
      ]
    },
    "build": {
      "cmd": "deno bundle public/ts/app.ts public/js/app.js"
    }
  },
  "watcher": {
    "interval": 350,
    "exts": ["js", "ts", "json"],
    "match": ["*.*"],
    "legacy": false,
    "ignore": ["./public"]
  },
  "logger": {
    "fullscreen": false,
    "quiet": false,
    "debug": true
  }
}